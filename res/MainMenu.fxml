<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="mainMenuPane" stylesheets="@/Style.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GraphicalView.MainMenu">
    <children>
      <VBox alignment="CENTER" spacing="150.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
              <Label fx:id="welcome" alignment="CENTER" text="welcome to My Shop" />
            <HBox alignment="CENTER" spacing="50.0" VBox.vgrow="ALWAYS">
               <children>
                    <Button mnemonicParsing="false" onMouseClicked="#products" text="products" />
                    <Button mnemonicParsing="false" onMouseClicked="#offs" text="Offs" />
                    <Button fx:id="userArea" mnemonicParsing="false" onMouseClicked="#userAreaChangeScene" text="User area" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="50.0">
               <children>
                    <Button fx:id="login" mnemonicParsing="false" text="login" />
                    <Button fx:id="logout" mnemonicParsing="false" text="logout" />
               </children>
            </HBox>
         </children>
      </VBox>
    </children>
</AnchorPane>
